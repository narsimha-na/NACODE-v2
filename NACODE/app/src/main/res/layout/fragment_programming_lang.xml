<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProgrammingLangFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/grey_5"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/mainPurple"
                android:minHeight="?attr/actionBarSize"
                app:title="C Programming"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
                app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" >

            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="11dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/programming_languages"
                            android:textColor="@color/darkGrey"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none"
                            >

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                >

                                <android.support.v7.widget.CardView
                                    android:id="@+id/programing_lang_c"
                                    android:layout_width="100dp"
                                    android:layout_height="107dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardElevation="10dp"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginBottom="7dp"
                                    >

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:src="@drawable/c" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:fontFamily="monospace"
                                            android:text="@string/c"
                                            android:textSize="12sp"
                                            android:textColor="@color/darkGrey"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>


                                <android.support.v7.widget.CardView
                                    android:id="@+id/programing_lang_cpp"
                                    android:layout_width="100dp"
                                    android:layout_height="107dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardElevation="10dp"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginBottom="7dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:src="@drawable/cpp" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:fontFamily="monospace"
                                            android:text="@string/cpp"
                                            android:textSize="12sp"
                                            android:layout_gravity="center"
                                            android:textColor="@color/darkGrey"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:id="@+id/programing_lang_java"
                                    android:layout_width="100dp"
                                    android:layout_height="107dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardElevation="10dp"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginBottom="7dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:src="@drawable/java" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:fontFamily="monospace"
                                            android:text="@string/java"
                                            android:textSize="12sp"
                                            android:layout_gravity="center"
                                            android:textColor="@color/darkGrey"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:id="@+id/programing_lang_python"
                                    android:layout_width="100dp"
                                    android:layout_height="107dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardElevation="10dp"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginBottom="7dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:src="@drawable/python" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:fontFamily="monospace"
                                            android:text="@string/python"
                                            android:textSize="12sp"
                                            android:layout_gravity="center"
                                            android:textColor="@color/darkGrey"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>

                            </LinearLayout>

                        </HorizontalScrollView>

                    </LinearLayout>

                </android.support.v7.widget.CardView>


               <android.support.v7.widget.CardView
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:layout_marginTop="10dp"
                   >

                   <LinearLayout
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:orientation="vertical">

                       <TextView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:padding="8dp"
                           android:text="@string/web_technologies"
                           android:textColor="@color/darkGrey"
                           android:textSize="15sp"
                           android:textStyle="bold" />

                       <HorizontalScrollView
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_margin="10dp">
                           <LinearLayout
                               android:layout_width="wrap_content"
                               android:layout_height="wrap_content"
                               android:orientation="horizontal">

                               <android.support.v7.widget.CardView
                                   android:id="@+id/programing_lang_html"
                                   android:layout_width="100dp"
                                   android:layout_height="107dp"
                                   android:clickable="true"
                                   android:focusable="true"
                                   app:cardElevation="10dp"
                                   android:layout_marginTop="7dp"
                                   android:layout_marginStart="7dp"
                                   android:layout_marginBottom="7dp">

                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:orientation="vertical">

                                       <ImageView
                                           android:layout_width="80dp"
                                           android:layout_height="80dp"
                                           android:layout_gravity="center"
                                           android:padding="5dp"
                                           android:src="@drawable/html" />

                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:layout_margin="5dp"
                                           android:fontFamily="monospace"
                                           android:text="@string/html"
                                           android:textSize="12sp"
                                           android:layout_gravity="center"
                                           android:textColor="@color/darkGrey"
                                           android:textStyle="bold" />
                                   </LinearLayout>
                               </android.support.v7.widget.CardView>

                               <android.support.v7.widget.CardView
                                   android:id="@+id/programing_lang_css"
                                   android:layout_width="100dp"
                                   android:layout_height="107dp"
                                   android:clickable="true"
                                   android:focusable="true"
                                   app:cardElevation="10dp"
                                   android:layout_marginTop="7dp"
                                   android:layout_marginStart="7dp"
                                   android:layout_marginBottom="7dp">

                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:orientation="vertical">

                                       <ImageView
                                           android:layout_width="80dp"
                                           android:layout_height="80dp"
                                           android:layout_gravity="center"
                                           android:padding="5dp"
                                           android:src="@drawable/css" />

                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:layout_margin="5dp"
                                           android:fontFamily="monospace"
                                           android:text="@string/css"
                                           android:textSize="12sp"
                                           android:layout_gravity="center"
                                           android:textColor="@color/darkGrey"
                                           android:textStyle="bold" />
                                   </LinearLayout>
                               </android.support.v7.widget.CardView>


                               <android.support.v7.widget.CardView
                                   android:id="@+id/programing_lang_js"
                                   android:layout_width="100dp"
                                   android:layout_height="107dp"
                                   android:clickable="true"
                                   android:focusable="true"
                                   app:cardElevation="10dp"
                                   android:layout_marginTop="7dp"
                                   android:layout_marginStart="7dp"
                                   android:layout_marginBottom="7dp">

                                   <LinearLayout
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent"
                                       android:orientation="vertical">

                                       <ImageView
                                           android:layout_width="80dp"
                                           android:layout_height="80dp"
                                           android:layout_gravity="center"
                                           android:padding="5dp"
                                           android:src="@drawable/js" />

                                       <TextView
                                           android:layout_width="wrap_content"
                                           android:layout_height="wrap_content"
                                           android:layout_margin="5dp"
                                           android:fontFamily="monospace"
                                           android:text="@string/javascript"
                                           android:textSize="12sp"
                                           android:layout_gravity="center"
                                           android:textColor="@color/darkGrey"
                                           android:textStyle="bold" />
                                   </LinearLayout>
                               </android.support.v7.widget.CardView>

                           </LinearLayout>
                       </HorizontalScrollView>
                   </LinearLayout>
               </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_margin="10dp">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="@string/database"
                            android:textColor="@color/darkGrey"
                            android:textSize="15sp"
                            android:textStyle="bold" />
                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_margin="5dp">
                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <android.support.v7.widget.CardView
                                    android:id="@+id/programing_lang_sql"
                                    android:layout_width="100dp"
                                    android:layout_height="107dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardElevation="10dp"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginBottom="7dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:src="@drawable/sql" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:fontFamily="monospace"
                                            android:text="@string/sql"
                                            android:textSize="12sp"
                                            android:layout_gravity="center"
                                            android:textColor="@color/darkGrey"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>

                                <android.support.v7.widget.CardView
                                    android:id="@+id/programing_lang_firebase"
                                    android:layout_width="100dp"
                                    android:layout_height="107dp"
                                    android:clickable="true"
                                    android:focusable="true"
                                    app:cardElevation="10dp"
                                    android:layout_marginTop="7dp"
                                    android:layout_marginStart="7dp"
                                    android:layout_marginBottom="7dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical">

                                        <ImageView
                                            android:layout_width="80dp"
                                            android:layout_height="80dp"
                                            android:layout_gravity="center"
                                            android:padding="5dp"
                                            android:src="@drawable/firebase" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_margin="5dp"
                                            android:fontFamily="monospace"
                                            android:text="@string/firebase"
                                            android:textSize="12sp"
                                            android:layout_gravity="center"
                                            android:textColor="@color/darkGrey"
                                            android:textStyle="bold" />
                                    </LinearLayout>
                                </android.support.v7.widget.CardView>
                            </LinearLayout>
                        </HorizontalScrollView>

                    </LinearLayout>
                </android.support.v7.widget.CardView>

              <android.support.v7.widget.CardView
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:layout_marginTop="10dp"
                  android:layout_marginBottom="10dp">

                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_margin="5dp"
                      >

                      <TextView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="8dp"
                          android:text="@string/android"
                          android:textColor="@color/darkGrey"
                          android:textSize="15sp"
                          android:textStyle="bold" />
                      <HorizontalScrollView
                          android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:layout_margin="5dp">
                          <LinearLayout
                              android:layout_width="wrap_content"
                              android:layout_height="wrap_content">


                              <android.support.v7.widget.CardView
                                  android:id="@+id/programing_lang_android"
                                  android:layout_width="100dp"
                                  android:layout_height="107dp"
                                  android:clickable="true"
                                  android:focusable="true"
                                  app:cardElevation="10dp"
                                  android:layout_marginStart="7dp">

                                  <LinearLayout
                                      android:layout_width="match_parent"
                                      android:layout_height="match_parent"
                                      android:orientation="vertical">

                                      <ImageView
                                          android:layout_width="80dp"
                                          android:layout_height="80dp"
                                          android:layout_gravity="center"
                                          android:padding="5dp"
                                          android:src="@drawable/android" />

                                      <TextView
                                          android:layout_width="wrap_content"
                                          android:layout_height="wrap_content"
                                          android:layout_margin="5dp"
                                          android:fontFamily="monospace"
                                          android:text="@string/android"
                                          android:textSize="12sp"
                                          android:layout_gravity="center"
                                          android:textColor="@color/darkGrey"
                                          android:textStyle="bold" />
                                  </LinearLayout>
                              </android.support.v7.widget.CardView>

                          </LinearLayout>
                      </HorizontalScrollView>
                  </LinearLayout>
              </android.support.v7.widget.CardView>




            </LinearLayout>
        </ScrollView>

    </LinearLayout>


</FrameLayout>